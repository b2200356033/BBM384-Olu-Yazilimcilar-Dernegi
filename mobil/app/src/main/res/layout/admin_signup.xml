<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_margin="20dp"
    android:layout_gravity="center">

    <ImageView
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_gravity="center"
        android:src="@drawable/student"
        app:tint="@color/dark_red" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Admin Sign Up"
        android:textStyle="bold"
        android:layout_gravity="center"
        android:textColor="@color/dark_red"
        android:layout_marginTop="20dp"
        android:textSize="25dp"/>

    <EditText
        android:id="@+id/edit_name"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:hint="Name"
        android:drawableLeft="@drawable/baseline_person"
        android:drawableTint="@color/dark_red"
        android:drawablePadding="10dp"
        android:padding="20dp"
        android:background="@drawable/admin_input_text_background_style"
        android:textStyle="bold"
        android:layout_gravity="center"
        android:textColorHint="@color/dark_red"
        android:layout_marginTop="20dp"/>

    <EditText
        android:id="@+id/edit_surname"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:drawableLeft="@drawable/baseline_person"
        android:drawableTint="@color/dark_red"
        android:background="@drawable/admin_input_text_background_style"
        android:drawablePadding="10dp"
        android:padding="20dp"
        android:hint="Surname"
        android:textStyle="bold"
        android:layout_gravity="center"
        android:textColorHint="@color/dark_red"
        android:layout_marginTop="20dp"/>

    <EditText
        android:id="@+id/edit_email"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:hint="Email"
        android:drawableLeft="@drawable/baseline_email"
        android:drawableTint="@color/dark_red"
        android:background="@drawable/admin_input_text_background_style"
        android:drawablePadding="10dp"
        android:padding="20dp"
        android:inputType="textEmailAddress"
        android:textStyle="bold"
        android:layout_gravity="center"
        android:textColorHint="@color/dark_red"
        android:layout_marginTop="20dp"/>

    <EditText
        android:id="@+id/edit_password"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:hint="Password"
        android:drawableLeft="@drawable/baseline_password"
        android:drawableTint="@color/dark_red"
        android:background="@drawable/admin_input_text_background_style"
        android:drawablePadding="10dp"
        android:padding="20dp"
        android:inputType="textPassword"
        android:textStyle="bold"
        android:layout_gravity="center"
        android:textColorHint="@color/dark_red"
        android:layout_marginTop="20dp"/>

    <Button
        android:id="@+id/signup_button"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="Sign Up"
        android:textStyle="bold"
        android:layout_gravity="center"
        android:textColor="@color/white"
        android:layout_marginTop="20dp"
        android:backgroundTint="@color/dark_red"/>

</LinearLayout>
