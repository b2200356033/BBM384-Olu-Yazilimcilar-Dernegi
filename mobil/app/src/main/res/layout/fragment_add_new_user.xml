<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Fragments.AdminPageFragments.AddNewUserFragment">

    <!-- TODO: Update blank fragment layout -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="ADD USER"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:layout_margin="10dp"
            android:gravity="center"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="fill_horizontal"
            android:layout_margin="10dp">
            <TextView
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:text="User name:"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:gravity="center"
                android:layout_marginRight="10dp"/>
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/user_nameEditLayout"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="250dp"
                app:errorEnabled="true"
                app:errorIconDrawable="@drawable/baseline_error_24"
                android:layout_height="match_parent">
                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/user_nameEditText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="User name"/>
            </com.google.android.material.textfield.TextInputLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="fill_horizontal"
            android:layout_margin="10dp">
            <TextView
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:text="User surname:"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:gravity="center"
                android:layout_marginRight="10dp"/>
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/user_surnameEditLayout"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="250dp"
                app:errorEnabled="true"
                app:errorIconDrawable="@drawable/baseline_error_24"
                android:layout_height="match_parent">
                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/user_surnameEditText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="User surname"/>
            </com.google.android.material.textfield.TextInputLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="fill_horizontal"
            android:layout_margin="10dp">
            <TextView
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:text="User email:"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:gravity="center"
                android:layout_marginRight="10dp"/>
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/user_emailEditLayout"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="250dp"
                app:errorEnabled="true"
                app:errorIconDrawable="@drawable/baseline_error_24"
                android:layout_height="match_parent">
                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/user_emailEditText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="User email"/>
            </com.google.android.material.textfield.TextInputLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="fill_horizontal"
            android:layout_margin="10dp">
            <TextView
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:text="User password:"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:gravity="center"
                android:layout_marginRight="10dp"/>
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/user_passwordEditLayout"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="250dp"
                app:helperText="8 digit password"
                app:errorEnabled="true"
                app:errorIconDrawable="@drawable/baseline_error_24"
                app:helperTextTextColor="@color/dark_red"
                app:counterEnabled="true"
                app:counterMaxLength="8"
                android:layout_height="match_parent">
                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/user_passwordEditText"
                    android:maxLength="8"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="User password"/>
            </com.google.android.material.textfield.TextInputLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="fill_horizontal"
            android:layout_margin="10dp">
            <TextView
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:text="User role:"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:gravity="center"
                android:layout_marginRight="10dp"/>
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/user_RoleEditText"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
                android:layout_width="250dp"
                app:errorEnabled="true"
                app:errorIconDrawable="@drawable/baseline_error_24"
                android:layout_height="match_parent"
                android:hint="Roles">
                <AutoCompleteTextView
                    android:id="@+id/auto_complete_roles"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="none"/>
            </com.google.android.material.textfield.TextInputLayout>
        </LinearLayout>
        <Button
            android:id="@+id/addUserBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Add USER"/>




    </LinearLayout>
</FrameLayout>
