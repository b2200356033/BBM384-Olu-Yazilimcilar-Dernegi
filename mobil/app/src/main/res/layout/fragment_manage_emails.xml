<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Fragments.AdminPageFragments.ManageEmailsFragment">


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:gravity="center"
        android:text="MANAGE EMAIL"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="fill_horizontal"
            android:layout_margin="10dp">
            <TextView
                android:layout_width="130dp"
                android:layout_height="match_parent"
                android:text="Old Email Address:"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:gravity="center"
                android:layout_marginRight="5dp"/>
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/user_oldEmail"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:errorEnabled="true"
                app:errorIconDrawable="@drawable/baseline_error_24">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/user_oldEmailLayoutEditText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Old email address..." />
            </com.google.android.material.textfield.TextInputLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="fill_horizontal"
            android:layout_margin="10dp">
            <TextView
                android:layout_width="130dp"
                android:layout_height="match_parent"
                android:text="New Email Address:"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:gravity="center"
                android:layout_marginRight="5dp"/>
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/user_newEmail"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:errorEnabled="true"
                app:errorIconDrawable="@drawable/baseline_error_24">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/user_newEmailLayoutEditText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="New email address..." />
            </com.google.android.material.textfield.TextInputLayout>
        </LinearLayout>

        <Button
            android:id="@+id/applyChangesBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Apply" />


    </LinearLayout>

</FrameLayout>